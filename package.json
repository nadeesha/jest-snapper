{
  "name": "react-snapper",
  "version": "0.0.1",
  "description": "Effortless snapshot testing for React Apps.",
  "main": "lib/index.js",
  "repository": "https://github.com/nadeesha/react-snapper",
  "author": "Nadeesha Cabral <nadeesha.cabral@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "jest"
  },
  "dependencies": {
    "debug": "^3.0.0",
    "enzyme": "^2.9.1",
    "jest": "^20.0.4",
    "lodash": "^4.17.4",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-generate-props": "^0.2.0",
    "react-test-renderer": "^15.6.1"
  },
  "devDependencies": {
    "@types/debug": "^0.0.30",
    "@types/enzyme": "^2.8.5",
    "@types/jest": "^20.0.6",
    "@types/lodash": "^4.14.72",
    "@types/node": "^8.0.20",
    "@types/prop-types": "^15.5.1",
    "@types/react": "^16.0.2",
    "@types/react-test-renderer": "^15.5.2",
    "ts-jest": "^20.0.10",
    "typescript": "^2.4.2"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "setupTestFrameworkScriptFile": "<rootDir>/src/testInit.ts",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  }
}

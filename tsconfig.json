{
  "compilerOptions": {
    "outDir": "./lib/",
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "typeRoots": [
      "custom-types/**/*"
    ],
    "types": [
      "node",
      "jest"
    ],
    "lib": ["es2017", "dom"],
    "allowJs": true,
    "strictNullChecks": true,
    "noImplicitUseStrict": true
  },
  "include": [
    "./src/**/*",
    "custom-types/**/*"
  ]
}